rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read/write their own user document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Store rules
    match /stores/{storeId} {
      // Store owners can read/write their stores
      allow read, write: if request.auth != null && 
        (request.auth.uid == resource.data.ownerId || 
         request.auth.uid == request.resource.data.ownerId);
      
      // Anyone can read active stores (for public store views)
      allow read: if resource.data.settings.isActive == true;
    }
    
    // Product rules
    match /products/{productId} {
      // Store owners can read/write products in their stores
      allow read, write: if request.auth != null && 
        exists(/databases/$(database)/documents/stores/$(resource.data.storeId)) &&
        get(/databases/$(database)/documents/stores/$(resource.data.storeId)).data.ownerId == request.auth.uid;
      
      // Anyone can read active products from active stores
      allow read: if resource.data.isActive == true &&
        exists(/databases/$(database)/documents/stores/$(resource.data.storeId)) &&
        get(/databases/$(database)/documents/stores/$(resource.data.storeId)).data.settings.isActive == true;
    }
    
    // Order rules
    match /orders/{orderId} {
      // Store owners can read orders for their stores
      allow read, write: if request.auth != null &&
        exists(/databases/$(database)/documents/stores/$(resource.data.storeId)) &&
        get(/databases/$(database)/documents/stores/$(resource.data.storeId)).data.ownerId == request.auth.uid;
      
      // Customers can read their own orders
      allow read: if request.auth != null && 
        (request.auth.uid == resource.data.customerId ||
         request.auth.token.email == resource.data.customerEmail);
      
      // Anyone can create orders (for guest checkout)
      allow create: if true;
    }
    
    // Categories rules
    match /categories/{categoryId} {
      // Store owners can read/write categories in their stores
      allow read, write: if request.auth != null &&
        exists(/databases/$(database)/documents/stores/$(resource.data.storeId)) &&
        get(/databases/$(database)/documents/stores/$(resource.data.storeId)).data.ownerId == request.auth.uid;
      
      // Anyone can read categories from active stores
      allow read: if exists(/databases/$(database)/documents/stores/$(resource.data.storeId)) &&
        get(/databases/$(database)/documents/stores/$(resource.data.storeId)).data.settings.isActive == true;
    }
    
    // Admin access (for admin users)
    match /{document=**} {
      allow read, write: if request.auth != null && 
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
  }
} 