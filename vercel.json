{
  "version": 2,
  "builds": [
    {
      "src": "apps/dashboard/package.json",
      "use": "@vercel/next"
    },
    {
      "src": "apps/admin/package.json",
      "use": "@vercel/next"
    },
    {
      "src": "apps/landing/package.json",
      "use": "@vercel/next"
    },
    {
      "src": "apps/public-store/package.json",
      "use": "@vercel/next"
    }
  ],
  "redirects": [
    {
      "source": "/(.*)",
      "has": [
        {
          "type": "host",
          "value": "www.(?<subdomain>.*).shopifree.app"
        }
      ],
      "destination": "https://:subdomain.shopifree.app/$1",
      "permanent": true
    }
  ],
  "wildcard": [
    {
      "domain": "*.shopifree.app",
      "value": "CNAME"
    },
    {
      "domain": "www.*.shopifree.app", 
      "value": "CNAME"
    }
  ]
} 